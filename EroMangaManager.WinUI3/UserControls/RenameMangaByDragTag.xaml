<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="EroMangaManager.WinUI3.UserControls.RenameMangaByDragTag"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mangainfo="using:EroMangaManager.WinUI3.UserControls.MangaBasicInfo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uid="using:EroMangaManager.WinUI3.Strings"
    xmlns:usercontrols="using:EroMangaManager.WinUI3.UserControls"
    mc:Ignorable="d">

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="5*" />
            <!--<ColumnDefinition />-->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="2*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <mangainfo:CoverWithContextFlyout
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="0"
            Source="{x:Bind Manga, Mode=OneWay}" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="4"
            Text="{x:Bind Manga.FileDisplayName, Mode=OneWay}"
            TextWrapping="Wrap" />
        <usercontrols:TagListOrder
            x:Name="order"
            Grid.Row="1"
            Grid.Column="1"
            Margin="4" />

        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Orientation="Vertical"
            Visibility="Visible">
            <TextBox
                x:Name="newnameBox"
                Margin="4"
                DataContext="{x:Bind Manga, Mode=OneWay}"
                FontSize="16"
                Text="{x:Bind order.NewName, Mode=OneWay}"
                TextWrapping="Wrap" />

            <Button
                x:Name="renamebutton"
                HorizontalAlignment="Stretch"
                Click="SingleMangaRename_New"
                Content="{uid:Strings Uid=RenameFile}" />
            <Button
                HorizontalAlignment="Stretch"
                Content="{uid:Strings Uid=Remove}"
                Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</UserControl>