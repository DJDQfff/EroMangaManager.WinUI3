<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="EroMangaManager.WinUI3.UserControls.TagTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EroMangaManager.WinUI3.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:strings="using:EroMangaManager.WinUI3.Strings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.ContextFlyout>
        <MenuFlyout>
            <MenuFlyoutItem Text="{strings:Strings Uid=Copy}" Click="MenuFlyoutItem_Click" />
            <MenuFlyoutItem Text="{strings:Strings Uid=SearchByTag}"
                            Click="MenuFlyoutItem_Click_1" />
        </MenuFlyout>
    </UserControl.ContextFlyout>
        <Border Background="{x:Bind Converter={StaticResource randomcolor}}">
            <TextBlock Margin="4" x:Name="textblock"
                       FontSize="16"/>
        </Border>
</UserControl>
