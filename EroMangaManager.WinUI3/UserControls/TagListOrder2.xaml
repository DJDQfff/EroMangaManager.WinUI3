<?xml version="1.0" encoding="utf-8" ?>
<UserControl Background="Transparent"
    x:Class="EroMangaManager.WinUI3.UserControls.TagListOrder2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:EroMangaManager.WinUI3.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <GridView Background="Transparent"
        x:Name="gridview"
        AllowDrop="True" CanDrag="True" CanDragItems="True"
        CanReorderItems="True">
        <GridView.ItemTemplate>
            <DataTemplate x:DataType="x:String">
                <CheckBox x:Name="checkbox" CanDrag="True"
                          Content="{x:Bind}" Background="Transparent"
                          IsChecked="True" />
            </DataTemplate>
        </GridView.ItemTemplate>
    </GridView>
</UserControl>
