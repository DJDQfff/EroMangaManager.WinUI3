<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="EroMangaManager.WinUI3.UserControls.MangaComplexDisplay.BriefInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:EroMangaManager.WinUI3.UserControls.MangaBasicInfo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <local:CoverWithContextFlyout
            x:Name="image"
            Grid.Row="0"
            Width="166"
            Height="192"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Source="{x:Bind Manga, Mode=OneWay}" />
        <TextBlock
            Grid.Row="1"
            Width="150"
            Margin="1"
            Padding="2"
            HorizontalTextAlignment="Center"
            MaxLines="1"
            Text="{x:Bind Manga.MangaName, Mode=OneWay}" />
        <local:SizeImagesChaptersAmount Grid.Row="2" DataContext="{x:Bind Manga, Mode=OneWay}" />
    </Grid>
</UserControl>