<UserControl
    x:Class="EroMangaManager.WinUI3.UserControls.QATextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="12"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock
                x:Name="QuestionTextBlock"
                FontSize="36"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="AnswerTextBlock"
                FontSize="16"
                TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>