<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="EroMangaManager.WinUI3.UserControls.MangaTagsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:EroMangaManager.WinUI3.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <!--  这个控件是专门用来给overviewinformation调用的，所以不能用coverwithcontextflyout控件  -->
    <Grid Width="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock FontSize="20" Text="{x:Bind Manga.MangaName, Mode=OneWay}" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <local:CoverWithContextFlyout Grid.Column="0" Source="{x:Bind Manga, Mode=OneWay}" />
            <ListView Grid.Column="1" ItemsSource="{x:Bind Manga.Tags, Mode=OneWay}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <local:TagTextBlock Text="{x:Bind}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--<local:TagItemsRepeater Manga="{x:Bind Manga,Mode=OneWay}" />-->
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Margin="4" Text="{x:Bind Manga.FileSize, Mode=OneWay, Converter={StaticResource filesizeConverter}}" />
            <TextBlock Margin="4" Text="{x:Bind Manga.ChapterAmount, Mode=OneWay, Converter={StaticResource displayUnits}, ConverterParameter=0}" />
            <TextBlock Margin="4" Text="{x:Bind Manga.ImageAmount, Mode=OneWay, Converter={StaticResource displayUnits}, ConverterParameter=1}" />
        </StackPanel>
    </Grid>
</UserControl>