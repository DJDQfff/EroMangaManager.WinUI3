<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="EroMangaManager.WinUI3.UserControls.SettingParts.ThemeSetting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="using:EroMangaManager.WinUI3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:EroMangaManager.WinUI3.UserControls.SettingParts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:setting="using:CommunityToolkit.WinUI.Controls"
    xmlns:uid="using:EroMangaManager.WinUI3.LocalizationWords"
    mc:Ignorable="d">

    <setting:SettingsCard Header="主题">
        <ComboBox SelectedIndex="{x:Bind app:App.Current.AppConfig.AppConfig.General.Theme}" SelectionChanged="ThemeSetting_SelectionChanged">
            <ComboBoxItem Content="自动" />
            <ComboBoxItem Content="浅色" />
            <ComboBoxItem Content="深色" />
        </ComboBox>
    </setting:SettingsCard>
</UserControl>