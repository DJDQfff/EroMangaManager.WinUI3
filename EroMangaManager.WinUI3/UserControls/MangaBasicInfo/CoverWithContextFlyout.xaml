<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="EroMangaManager.WinUI3.UserControls.MangaBasicInfo.CoverWithContextFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commands="using:EroMangaManager.WinUI3.Commands"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mangainfo="using:EroMangaManager.WinUI3.UserControls.MangaBasicInfo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uid="using:EroMangaManager.WinUI3.Strings"
    MaxWidth="400"
    MaxHeight="800"
    DoubleTapped="UserControl_DoubleTapped"
    mc:Ignorable="d">
    <UserControl.Resources>
        <MenuFlyout x:Key="flyout">
            <MenuFlyoutItem Command="{x:Bind commands:MangaCommands.Instance.OpenManga}" CommandParameter="{x:Bind Source, Mode=OneWay}" />
            <MenuFlyoutItem
                Command="{x:Bind commands:MangaCommands.Instance.LocateInExplorer}"
                CommandParameter="{x:Bind Source, Mode=OneWay}"
                Text="{uid:Strings Uid=LocateInExplorer}" />
            <MenuFlyoutSubItem
                x:Name="moveto"
                Icon="MoveToFolder"
                Loaded="Moveto_Loaded"
                Text="{uid:Strings Uid=MoveToOtherFolder}" />
            <MenuFlyoutItem
                Command="{x:Bind commands:MangaCommands.Instance.ExportPDF}"
                CommandParameter="{x:Bind Source, Mode=OneWay}"
                Text="{uid:Strings Uid=ExportToPDF}" />

            <MenuFlyoutItem
                Command="{x:Bind commands:UICommands.Instance.OverviewInformation}"
                CommandParameter="{x:Bind Source, Mode=OneWay}"
                Text="{uid:Strings Uid=OverviewInformation}" />
            <MenuFlyoutItem
                Command="{x:Bind commands:MangaCommands.Instance.StorageCommandRename}"
                CommandParameter="{x:Bind Source, Mode=OneWay}"
                Text="{uid:Strings Uid=RenameFile}" />
            <MenuFlyoutItem
                Command="{x:Bind commands:UICommands.Instance.SearchSimilar}"
                CommandParameter="{x:Bind Source.MangaName, Mode=OneWay}"
                Text="{uid:Strings Uid=SearchSimialr}" />
            <MenuFlyoutSeparator />

            <MenuFlyoutItem
                Command="{x:Bind commands:MangaCommands.Instance.StorageCommandDelete}"
                CommandParameter="{x:Bind Source, Mode=OneWay}"
                Foreground="Red"
                Text="{uid:Strings Uid=DeleteIt}" />
            <!--</MenuFlyoutSubItem>-->
        </MenuFlyout>
    </UserControl.Resources>
    <Image
        x:Name="image"
        ContextFlyout="{StaticResource flyout}"
        ImageFailed="Image_ImageFailed"
        Source="{x:Bind Source.CoverPath, Mode=OneWay}" />
</UserControl>