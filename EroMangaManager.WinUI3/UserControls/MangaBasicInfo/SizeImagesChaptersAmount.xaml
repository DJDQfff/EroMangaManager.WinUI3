<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="EroMangaManager.WinUI3.UserControls.MangaBasicInfo.SizeImagesChaptersAmount"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:EroMangaManager.WinUI3.UserControls.MangaBasicInfo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal">
        <TextBlock Margin="4" Text="{x:Bind Manga.FileSize, Mode=OneWay, Converter={StaticResource filesizeConverter}}" />
        <TextBlock Margin="4" Text="{x:Bind Manga.ChapterAmount, Mode=OneWay, Converter={StaticResource displayUnits}, ConverterParameter=0}" />
        <TextBlock Margin="4" Text="{x:Bind Manga.ImageAmount, Mode=OneWay, Converter={StaticResource displayUnits}, ConverterParameter=1}" />
    </StackPanel>
</UserControl>