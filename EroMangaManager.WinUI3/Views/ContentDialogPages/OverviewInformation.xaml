<ContentDialog
    x:Class="EroMangaManager.WinUI3.Views.ContentDialogPages.OverviewInformation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uid="using:EroMangaManager.WinUI3.Strings"
    xmlns:usercontrols="using:EroMangaManager.WinUI3.UserControls"
    Title="{x:Bind Manga.FilePath}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    CloseButtonText="{uid:Strings Uid=Close}"
    mc:Ignorable="d">
    <usercontrols:MangaDisplayNameView Manga="{x:Bind Manga}" />
</ContentDialog>