<Page
    x:Class="EroMangaManager.WinUI3.Views.FunctionChildPages.FindSameManga"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commands="using:EroMangaManager.WinUI3.Commands"
    xmlns:coremodel="using:EroMangaManager.Core.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uid="using:EroMangaManager.WinUI3.Strings"
    xmlns:usercontrols="using:EroMangaManager.WinUI3.UserControls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <ComboBox x:Name="combobox" SelectedIndex="0">
                <ComboBoxItem Content="{uid:Strings Uid=Method1}" />
                <ComboBoxItem Content="{uid:Strings Uid=Method2}" />
                <ComboBoxItem Content="{uid:Strings Uid=Method3}" IsEnabled="False" />
                <ComboBoxItem Content="{uid:Strings Uid=Method4}" />
            </ComboBox>
            <Button Click="Button_Click" Content="{uid:Strings Uid=Start}" />
            <ProgressRing IsActive="{x:Bind viewModel.isWorking, Mode=OneWay}" />
        </StackPanel>
        <ListView
            x:Name="listView"
            Grid.Row="1"
            ItemsSource="{x:Bind viewModel.RepeatPairs, Mode=OneWay}"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="coremodel:RepeatMangasGroup">
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                            Margin="20"
                            FontSize="24"
                            Text="{x:Bind Key}" />
                        <GridView ItemsSource="{x:Bind Collections, Mode=OneWay}" SelectionMode="None">
                            <GridView.ItemTemplate>
                                <DataTemplate x:DataType="coremodel:Manga">
                                    <Grid Margin="4">
                                        <usercontrols:MangaDisplayNameView
                                            Width="400"
                                            Height="200"
                                            Manga="{x:Bind}" />
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>