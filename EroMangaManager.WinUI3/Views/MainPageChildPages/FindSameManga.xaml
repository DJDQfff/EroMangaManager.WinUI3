<Page
    x:Class="EroMangaManager.WinUI3.Views.FunctionChildPages.FindSameManga"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commands="using:EroMangaManager.WinUI3.Commands"
    xmlns:coremodel="using:EroMangaManager.Core.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:functionchildpages="using:EroMangaManager.WinUI3.Views.FunctionChildPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uid="using:EroMangaManager.WinUI3.Strings"
    xmlns:usercontrols="using:EroMangaManager.WinUI3.UserControls.MangaComplexDisplay"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <ComboBox x:Name="combobox" SelectedIndex="0">
                <ComboBoxItem Content="{uid:Strings Uid=Method1}" />
                <ComboBoxItem Content="{uid:Strings Uid=Method2}" />
                <ComboBoxItem Content="{uid:Strings Uid=Method3}" />
                <ComboBoxItem Content="{uid:Strings Uid=Method4}" />
            </ComboBox>
            <Button Click="Button_Click" Content="{uid:Strings Uid=Start}" />
            <ProgressRing IsActive="{x:Bind viewModel.IsWorking, Mode=OneWay}" />
        </StackPanel>
        <ListView
            x:Name="listView"
            Grid.Row="1"
            ItemsSource="{x:Bind viewModel.RepeatPairs, Mode=OneWay}"
            SelectionMode="None">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="coremodel:RepeatMangasGroup">

                    <Expander
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        IsExpanded="True">
                        <Expander.Header>
                            <CommandBar VerticalContentAlignment="Center" Content="{x:Bind Key}" />
                        </Expander.Header>
                        <Expander.Content>
                            <ListView ItemsSource="{x:Bind Collections, Mode=OneWay}" SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="coremodel:Manga">
                                        <Grid Margin="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="auto" />
                                            </Grid.ColumnDefinitions>
                                            <usercontrols:StorageInfo Height="200" Manga="{x:Bind}" />
                                            <StackPanel Grid.Column="1" Orientation="Vertical">
                                                <Button
                                                    HorizontalAlignment="Stretch"
                                                    Command="{x:Bind commands:MangaCommands.Instance.OpenWithManga}"
                                                    CommandParameter="{x:Bind}"
                                                    Content="{uid:Strings Uid=Open}" />
                                                <Button
                                                    HorizontalAlignment="Stretch"
                                                    Command="{x:Bind commands:MangaCommands.Instance.LocateInExplorer}"
                                                    CommandParameter="{x:Bind}"
                                                    Content="{uid:Strings Uid=OpenFolder}" />
                                                <Button
                                                    Command="{x:Bind commands:MangaCommands.Instance.StorageCommandRename}"
                                                    CommandParameter="{x:Bind}"
                                                    Content="{uid:Strings Uid=RenameFile}" />
                                                <Button
                                                    HorizontalAlignment="Stretch"
                                                    Command="{x:Bind commands:MangaCommands.Instance.StorageCommandDelete}"
                                                    CommandParameter="{x:Bind}"
                                                    Content="{uid:Strings Uid=DeleteIt}"
                                                    Foreground="Red" />
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Expander.Content>
                    </Expander>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>