<Page
    x:Class="EroMangaManager.WinUI3.Views.MainPageChildPages.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settingviews="using:EroMangaManager.WinUI3.Views.SettingPageChildPages"
    xmlns:uid="using:EroMangaManager.WinUI3.LocalizationWords"
    mc:Ignorable="d">
    <Grid>
        <NavigationView
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            ItemInvoked="NavigationView_ItemInvoked"
            PaneDisplayMode="Top">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    x:Name="CommonSettingNavigationViewItem"
                    Content="{uid:UI Uid=CommonSetting}"
                    IsSelected="True" />
                <NavigationViewItem x:Name="PasswordManagementSetting" Content="{uid:UI Uid=PasswordManagement}" />
                <NavigationViewItem
                    x:Name="SettingFilterImageButton"
                    Content="{uid:UI Uid=FilteredImages}"
                    Visibility="Collapsed" />
                <NavigationViewItem
                    x:Name="SettingTagButton"
                    Content="{uid:UI Uid=Tags}"
                    Visibility="Collapsed" />
            </NavigationView.MenuItems>
            <NavigationView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Frame x:Name="SettingFrame">
                        <settingviews:CommonSettingPage />
                    </Frame>
                    <StackPanel
                        x:Name="NavigateButtons"
                        Grid.Row="1"
                        Orientation="Vertical"
                        RelativePanel.AlignBottomWithPanel="True">
                        <HyperlinkButton Content="{uid:UI Uid=OpenInMicrosoftStore}" NavigateUri="https://www.microsoft.com/store/apps/9N7C8ZDQ1TJ8" />

                        <HyperlinkButton Content="{uid:UI Uid=GitHubFeedBack}" NavigateUri="https://github.com/DJDQfff/FeedBack/issues" />
                        <HyperlinkButton
                            VerticalAlignment="Center"
                            Content="{uid:UI Uid=MailFeedbackToDeveloper}"
                            NavigateUri="mailto:djdqfff@qq.com" />
                    </StackPanel>
                </Grid>
            </NavigationView.Content>
        </NavigationView>
    </Grid>
</Page>